  <modelVersion>4.0.0</modelVersion>
  <groupId>com.wurgobes</groupId>
  <artifactId>sSMLMA</artifactId>
  <name>sSMLM Analyzer</name>
  <version>1.0</version>
  <description>A spectral super resolution miscoscopy analyzer</description>
  <url>https://github.com/HohlbeinLab/sSMLMAnalyzer</url>
  <issueManagement>
    <system>GitHub Issues</system>
    <url>https://github.com/HohlbeinLab/sSMLMAnalyzer/issues</url>
  </issueManagement>
  <ciManagement>
    <system>None</system>
  </ciManagement>
  <inceptionYear>2020</inceptionYear>
  <mailingLists>
    <mailingList>
      <name>Image.sc Forum</name>
      <archive>https://forum.image.sc/tags/imagej</archive>
    </mailingList>
  </mailingLists>
  <developers>
    <developer>
      <id>mgobes</id>
      <name>Martijn Gobes</name>
      <roles>
        <role>founder</role>
        <role>lead</role>
        <role>developer</role>
        <role>debugger</role>
        <role>reviewer</role>
        <role>support</role>
        <role>maintainer</role>
      </roles>
    </developer>
  </developers>
  <contributors>
    <contributor>
      <name>Martijn Gobes</name>
      <email>martijn.gobes@wur.nl</email>
      <organization>WUR</organization>
      <organizationUrl>https://www.wur.nl/</organizationUrl>
      <roles>
        <role>developer</role>
      </roles>
    </contributor>
  </contributors>
  <licenses>
    <license>
      <name>GPL-3.0 License</name>
      <distribution>repo</distribution>
    </license>
  </licenses>
  <scm>
    <connection>scm:git:git://github.com/HohlbeinLab/sSMLMAnalyzer</connection>
    <developerConnection>scm:git:git@github.com:DrNjitram</developerConnection>
    <url>https://github.com/HohlbeinLab/sSMLMAnalyzer</url>
  </scm>
  <organization>
    <name>Wageningen University</name>
    <url>https://wur.nl/</url>
  </organization>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.3.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <artifactSet>
                <includes>
                  <include>org.jblas:jblas</include>
                </includes>
              </artifactSet>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <id>scijava.public</id>
      <url>https://maven.scijava.org/content/groups/public</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>net.imagej</groupId>
      <artifactId>imagej</artifactId>
      <version>2.3.0</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>net.imglib2</groupId>
      <artifactId>imglib2-ij</artifactId>
      <version>2.0.0-beta-46</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>sc.fiji</groupId>
      <artifactId>fiji-lib</artifactId>
      <version>2.1.3</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>sc.fiji</groupId>
      <artifactId>Directionality_</artifactId>
      <version>2.3.0</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.apache.maven.plugins</groupId>
      <artifactId>maven-shade-plugin</artifactId>
      <version>3.3.0</version>
      <scope>compile</scope>
      <exclusions>
        <exclusion>
          <artifactId>aether-util</artifactId>
          <groupId>org.eclipse.aether</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
  <properties>
    <license.copyrightOwners>WUR, Inc.</license.copyrightOwners>
    <scijava.app.directory>H:\PhD\fiji-win64\Fiji.app</scijava.app.directory>
    <license.licenseName>bsd_2</license.licenseName>
    <package-name>com.wurgobes.sSMLMAnalyzer</package-name>
    <main-class>com.wurgobes.sSMLMAnalyzer.sSMLMA</main-class>
  </properties>
</project>
